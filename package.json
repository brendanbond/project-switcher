{
  "name": "project-switcher",
  "displayName": "Project Switcher",
  "description": "",
  "version": "0.0.1",
  "publisher": "brendanjbond",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:project-switcher.switch"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-switcher.switch",
        "title": "Project Switcher: Switch Projects"
      }
    ],
    "configuration": {
      "title": "Project Switcher",
      "properties": {
        "project-switcher.projectDirectory": {
          "type": "string",
          "default": null,
          "description": "Specifies the parent directory from which the extension looks for project directories."
        }
      }
    },
    "keybindings": [
      {
        "command": "project-switcher.switch",
        "key": "ctrl+;",
        "mac": "cmd+;",
        "when": "!inQuickOpen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
